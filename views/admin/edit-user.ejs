<%-include('../layouts/header.ejs')%>

<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100 " >
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6 ">
            <div class="card border-0 shadow-lg ">
              <div class="card-body ">
                <h4 class="text-uppercase text-center">Edit User</h4>
               
  
                <form  action="" method="post">
  
                  <div class="form-outline mb-3 px-5">
                      <label class="form-label" for="form3Example1cg"> Name</label>
                    <input type="text" id="form3Example1cg" value="<%=user.name%>" class="form-control form-control-md " name="name" />
                    
                  </div>
  
                  <div class="form-outline mb-3 px-5">
                      <label class="form-label" for="form3Example3cg"> Email</label>
                    <input name="email" type="email" id="form3Example3cg" value="<%=user.email%>" class="form-control form-control-md" />
                   
                  </div>
                  <div class="form-outline mb-3 px-5">
                      <label class="form-label" for="form3Example4cg">Mobile</label>
                      <input name="mobile" value="<%=user.mobile%>" type="tel" id="form3Example4cg" class="form-control form-control-md" />
                     
                    </div>
                    <input type="hidden" name="id" value="<%=user._id%>">
  
                  <div class="form-outline mb-3 px-5">
                      <label class="form-label" for="form3Example4cg">Verified</label>
                    <input name="verify" type="radio" value="0" id="form3Example4cg"  />
                   
                  </div>
                    <div class="d-flex justify-content-center px-5">
                    <button type="submit"
                      class="btn btn-primary btn-block btn-md gradient-custom-4 text-body">Update</button>
                  </div>  
                </form>
  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<%-include('../layouts/footer.ejs')%>